{#
| Variable    | Type   | Description          |
|-------------|--------|----------------------|
| apps        | array  |                      |
| apps[].name | string | appstore, googleplay |
| apps[].url  | string |                      |
#}
{% if apps|length %}
  <div class="lg:col-span-1 rtl:lg:pr-20 ltr:lg:pl-20 mb-4">
    <h3>{{trans('blocks.footer.download_apps')}}</h3>
    <div class="flex justify-between items-center w-full">
      {% for app in apps %}
          <a href="{{ app.url }}" rel="noreferrer" target="_blank"  class=" leading-none hover:text-primary">
              <img alt="{{ app.name }}" width="135" height="40" src="{{ ('images/'~ app.name ~'.png') | cdn }}"/>
          </a>
      {% endfor %}
    </div>
    
     {% if store.settings.certificate %}
        <li class="mt-2 md:mt-5 ">
            <a class="flex items-center justify-center flex-col h-full" target="_blank" href="https://eauthenticate.saudibusiness.gov.sa/certificate-details/{{ store.settings.certificate.id }}" alt="{{ store.settings.certificate.id }}" >
                <img width="40%" height="40%" src="{{ 'images/s-empty.png' | asset }}" data-src="{{ 'images/sbc.png' | cdn }}" class="lazy rounded-sm hover:opacity-80 transition-opacity mb-3" alt="value added tax">
   
                {{ trans('footer.business_cert.business') }}
              
            </a>
        </li>
    {% endif %}

  </div>
{% endif %}