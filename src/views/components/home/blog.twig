<section class ="s-block container">
    <div class="text-center py-2 w-full mb-2 flex flex-col justify-center items-center md:gap-4 gap-4">
          <h1 class="shamelBold md:text-[58px] md:leading-20 leading-12  md:w-[60%] w-full text-[40px]">   {{component.title}} </h1>
          <div class="line"></div>

        </div>
        

    <salla-slider type="carousel" controls-outer show-controls="false">
        <div slot="items">
            {% for slide in component.posts %}
                <div class="flex flex-col justify-center items-center space-y-4" style="width: 343px ; align-items: center !important">
            
       
                    <a href="{{slide.url}}" class=" w-full" style="height : 350px">
                        <img src="{{slide.image.url}}" class=" w-full h-full rounded-lg"/>
                    </a>
                    <h2 class="shamelBook md:!text-[22px]  leading-12 !text-[20px]" style="font-weight:  800">
                        {{slide.title}}
         
                   
                    </h2>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>